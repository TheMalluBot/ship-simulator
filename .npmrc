# Save exact version of packages
save-exact=true

# Use pnpm for package management
engine-strict=true

# Set the package manager to pnpm
package-manager=pnpm@8.6.0

# Configure the package lockfile
package-lock=false

# Configure the node version
node-version=18.0.0

# Configure the npm version
npm-version=9.0.0

# Configure the yarn version
yarn-version=3.2.0

# Configure the pnpm version
pnpm-version=8.6.0

# Configure the registry
registry=https://registry.npmjs.org/

# Configure the cache directory
cache=node_modules/.cache

# Configure the loglevel
loglevel=error

# Configure the progress
progress=false

# Configure the fund
fund=false

# Configure the audit
audit=false

# Configure the prefer-offline
prefer-offline=true

# Configure the strict-peer-dependencies
strict-peer-dependencies=false

# Configure the legacy-peer-deps
legacy-peer-deps=true

# Configure the save-prefix
save-prefix=^

# Configure the save-dev
save-dev=true

# Configure the save-optional
save-optional=true

# Configure the save-prefix
save-prefix=^

# Configure the save-exact
save-exact=true

# Configure the save-prefix
save-prefix=~
